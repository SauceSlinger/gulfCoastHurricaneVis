[flake8]
# Flake8 configuration for Gulf Coast Hurricane Visualization

# Exclude patterns
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    deprecated,
    .eggs,
    *.egg-info,
    .tox,
    database/__pycache__

# Maximum line length
max-line-length = 127

# Maximum cyclomatic complexity
max-complexity = 10

# Error codes to ignore
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    W504   # line break after binary operator

# Select specific error codes for strict checking
select = E,F,W,C90

# Per-file ignores for known issues
per-file-ignores =
    __init__.py:F401
    launch_dashboard.py:E999,F821
    native_visualizations.py:F821
    tabbed_native_dashboard.py:F821
    visualizations.py:F821
